{
  "name": "kuma-mieru",
  "description": "A 3rd-party Uptime Kuma monitoring dashboard built on Next.js 15, TypeScript and Recharts.",
  "version": "1.3.8",
  "author": "Alice39s",
  "license": "MPL-2.0",
  "homepage": "https://github.com/Alice39s/kuma-mieru",
  "repository": {
    "type": "git",
    "url": "https://github.com/Alice39s/kuma-mieru.git"
  },
  "private": true,
  "scripts": {
    "dev": "bun run linter && next dev --turbopack --port 3881",
    "build": "next build",
    "build:cloudflare": "opennextjs-cloudflare build",
    "deploy:cloudflare": "opennextjs-cloudflare deploy",
    "start": "bun .next/standalone/server.js",
    "start:docker": "bun run generate && bun run scripts/docker-init.ts && bun ./server.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "predev": "bun run generate",
    "prebuild": "bun run generate",
    "prestart": "bun run generate",
    "postdev": "bun run linter",
    "linter": "bun lint:fix && bun format:fix",
    "generate": "bun scripts/generate-config.ts && bun scripts/generate-image-domains.ts && bun scripts/banner.ts",
    "generate-config": "bun scripts/generate-config.ts",
    "generate-image-domains": "bun scripts/generate-image-domains.ts",
    "banner": "bun scripts/banner.ts"
  },
  "dependencies": {
    "@heroui/react": "^2.7.8",
    "@heroui/theme": "^2.4.15",
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@opennextjs/cloudflare": "^1.1.0",
    "@react-aria/ssr": "3.9.7",
    "@react-aria/visually-hidden": "3.8.20",
    "@types/markdown-it": "^14.1.2",
    "@types/sanitize-html": "^2.16.0",
    "chalk": "^5.4.1",
    "cheerio": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "framer-motion": "^12.15.0",
    "intl-messageformat": "^10.7.16",
    "json5": "^2.2.3",
    "lucide-react": "^0.483.0",
    "markdown-it": "^14.1.0",
    "next": "15.3.8",
    "next-intl": "^4.1.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "recharts": "^2.15.3",
    "sanitize-html": "^2.17.0",
    "sonner": "^2.0.4",
    "swr": "^2.3.3",
    "tailwind-merge": "^3.3.0",
    "tm-themes": "^1.10.6",
    "usehooks-ts": "^3.1.1",
    "zod": "^3.25.44"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@next/eslint-plugin-next": "15.3.0",
    "@react-types/shared": "3.28.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "22.13.14",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "8.30.1",
    "@typescript-eslint/parser": "8.29.1",
    "autoprefixer": "10.4.21",
    "dotenv": "^16.5.0",
    "postcss": "8.5.3",
    "prettier": "3.5.3",
    "shiki": "^3.4.2",
    "tailwind-variants": "1.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "wrangler": "^4.18.0"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@heroui/shared-utils"
  ]
}
